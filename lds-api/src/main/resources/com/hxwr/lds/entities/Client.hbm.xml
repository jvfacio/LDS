<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hxwr.lds.core.entities.Client" table="client">
        <id name="id" type="java.lang.Integer">
            <column name="clientid" />
            <generator class="identity" />
        </id>
        <property name="address" type="string">
            <column name="address"/>
        </property>
        <property name="lastName" type="string">
            <column name="lastName" />
        </property>
        <property name="name" type="string">
            <column name="name" not-null="true"/>
        </property>
        <property name="phoneNumber" type="string">
            <column name="phoneNumber"/>
        </property>
        <property name="salary" type="string">
            <column name="salary"/>
        </property>
        <property name="nickName" type="string" not-null="true" unique="true"/>
        <property name="pass" type="string" not-null="true"/>
        <set name="loans" table="loan" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="clientid" not-null="true"/>
            </key>
            <one-to-many class="com.hxwr.lds.core.entities.Loan"/>
        </set>
    </class>
</hibernate-mapping>
